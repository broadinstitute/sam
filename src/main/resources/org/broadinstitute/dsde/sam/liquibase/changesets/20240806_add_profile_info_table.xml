<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="dummy"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet logicalFilePath="dummy" author="kfeldman" id="add_profile_info_to_user_attributes_table">
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="first_name" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="last_name" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="organization" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="contact_email" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="title" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="department" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="interest_in_terra" type="VARCHAR ARRAY">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="program_location_city" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="program_location_state" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="program_location_country" type="VARCHAR">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="research_area" type="VARCHAR ARRAY">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="additional_attributes" type="JSONB">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    <addColumn tableName="SAM_USER_ATTRIBUTES">
        <column name="created_at" type="timestamptz">
            <constraints nullable="true"/>
        </column>
    </addColumn>
    </changeSet>
    <changeSet logicalFilePath="dummy" author="kfeldman" id="move_updated_at_column_to_end_of_table">
<!--        renaming updated_at so I can recreate it as a new column, then transfer existing data -->
        <renameColumn tableName="SAM_USER_ATTRIBUTES" oldColumnName="updated_at" newColumnName="old_updated_at"/>
        <addColumn tableName="SAM_USER_ATTRIBUTES">
            <column name="updated_at" type="timestamptz" valueComputed="old_updated_at">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <dropColumn tableName="SAM_USER_ATTRIBUTES" columnName="old_updated_at"/>
    </changeSet>
</databaseChangeLog>
